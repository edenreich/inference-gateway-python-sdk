{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: Debug Tests",
      "type": "debugpy",
      "request": "launch",
      "program": "/usr/local/bin/python",
      "args": [
        "-v",
        "--no-cov",
        "tests/"
      ],
      "console": "integratedTerminal",
      "justMyCode": false
    },
    {
      "name": "Python: Debug Current Test",
      "type": "debugpy", 
      "request": "launch",
      "program": "/usr/local/bin/python",
      "args": [
        "-v",
        "--no-cov",
        "${file}"
      ],
      "console": "integratedTerminal",
      "justMyCode": false
    }
  ]
}
